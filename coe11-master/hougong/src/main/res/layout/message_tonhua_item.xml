<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/find_zuixin_touxiang"
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_toRightOf="@+id/find_zuixin_touxiang"
            android:text="用户名"
            android:id="@+id/find_zuixin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <TextView
            android:layout_below="@+id/find_zuixin_name"
            android:layout_toRightOf="@+id/find_zuixin_touxiang"
            android:text="22"
            android:id="@+id/find_zuixin_dizhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:text="22-10-15"
            android:id="@+id/find_zuixin_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

