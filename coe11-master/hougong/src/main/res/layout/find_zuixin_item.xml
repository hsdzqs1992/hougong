<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/padding"
              android:layout_height="match_parent">

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/find_zuixin_touxiang"
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_toRightOf="@+id/find_zuixin_touxiang"
            android:text="用户名"
            android:id="@+id/find_zuixin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_toRightOf="@+id/find_zuixin_name"
            android:text="22"
            android:id="@+id/find_zuixin_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
        android:layout_below="@+id/find_zuixin_name"
        android:layout_toRightOf="@+id/find_zuixin_touxiang"
        android:text="22"
        android:id="@+id/find_zuixin_dizhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:text="22-10-15"
            android:id="@+id/find_zuixin_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <TextView
        android:text="22-10-1522-10-1522-10-1522-10-15"
        android:id="@+id/find_zuixin_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/find_zuixin_tuji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:id="@+id/find_zuixin_dianzan"
            android:text="点赞"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:id="@+id/find_zuixin_pinglun"
            android:text="评论"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:id="@+id/find_zuixin_liwu"
            android:text="礼物"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
