<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/home_tuijian_item_touxiang"
            android:src="@mipmap/ic_launcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="@dimen/h10"
            android:layout_marginTop="@dimen/h10"
            android:id="@+id/home_tuijian_item_status"
            android:text="离线"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/h10"
            android:layout_marginTop="@dimen/h10"
            android:id="@+id/home_tuijian_item_zhuboname"
            android:text="某主播"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="@dimen/h10"
            android:layout_marginTop="@dimen/h10"
            android:id="@+id/home_tuijian_item_zhuboage"
            android:text="22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/h10"
            android:layout_marginTop="@dimen/h10"
            android:id="@+id/home_tuijian_item_zhuboprice"
            android:text="350币/分钟"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/h10"
            android:layout_marginTop="@dimen/h10"
            android:id="@+id/home_tuijian_item_zhuboguanzhu"
            android:text="已关注"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>
